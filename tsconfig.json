{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "lib": ["es2015", "es7"],
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.*"]
}
